@model EFMVC.BusinessTier.PersonModel
@{
    ViewBag.Title = "Signup";
}


@using (Html.BeginForm("Signup", "Signup"))
{
    <fieldset>
        <legend>Join My Twitteer clone</legend>

        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <h5>user id</h5>
                </div>
                <div class="col-lg-3">
                    @Html.EditorFor(model => model.UserId)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <h5>password</h5>
                </div>
                <div class="col-lg-3">
                    @Html.PasswordFor(model => model.Password)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <h5>fullName</h5>
                </div>
                <div class="col-lg-3">
                    @Html.EditorFor(model => model.FullName)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <h5>email</h5>
                </div>
                <div class="col-lg-3">
                    @Html.EditorFor(model => model.Email)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                </div>
                <div class="col-lg-3">
                    <input type="submit" value="Signup" />
                </div>
            </div> 
        </div>
    </fieldset>
}